<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="5dp"
        android:fitsSystemWindows="true" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <!--
                    <RelativeLayout
                        style="@style/ImageButtonLayout"
                        android:layout_width="wrap_content" >

                        <Button
                            android:id="@+id/xShift"
                            style="@style/button_Style"
                            android:background="@drawable/sym_keyboard_shift"
                            android:tag="upper" />
                    </RelativeLayout>
            -->

            <Button
                android:id="@+id/xShift"
                style="@style/button_Style"
                android:background="@drawable/sym_keyboard_shift"
                android:tag="upper" />

            <Button
                android:id="@+id/xZ"
                style="@style/button_Style"
                android:tag="Z"
                android:text="Z" />

            <Button
                android:id="@+id/xX"
                style="@style/button_Style"
                android:tag="X"
                android:text="X" />

            <Button
                android:id="@+id/xC"
                style="@style/button_Style"
                android:tag="C"
                android:text="C" />

            <Button
                android:id="@+id/xV"
                style="@style/button_Style"
                android:tag="V"
                android:text="V" />

            <Button
                android:id="@+id/xB"
                style="@style/button_Style"
                android:tag="B"
                android:text="B" />

            <Button
                android:id="@+id/xN"
                style="@style/button_Style"
                android:tag="N"
                android:text="N" />

            <Button
                android:id="@+id/xM"
                style="@style/button_Style"
                android:tag="M"
                android:text="M" />

            <Button
                android:id="@+id/xBack"
                style="@style/button_Style"
                android:background="@drawable/delete_keyboard_img"
                android:tag="back" />

            <!--
                    <RelativeLayout style="@style/ImageButtonLayout" >

                        <Button
                            android:id="@+id/xBack"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/sym_keyboard_delete"
                            android:tag="back" />
                    </RelativeLayout>
            -->

        </LinearLayout>
    </TableRow>

</LinearLayout>